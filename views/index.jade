extends layout

block body
  div.github-fork-ribbon-wrapper.right
    div.github-fork-ribbon
      a(href="https://github.com/zumicts/nobot.email") Fork me on GitHub
  div
    section.section

      //- header
      div.container
          header.section-header.underline
              a(href="/")
                  h1.headline.hyper.hairline
                    i.fa.fa-envelope
                    |  no
                    strong.accent-color bot
                    | .email
                  p(class="big") share your email safely!

      //- ng views render here
      div.container
        div.jumbotron.sixhundred-max.center-block
          div(ng-view)

      //- footer
      div.footer
        div.container.text-center.text-muted
          div
            a(href="/about", class="text-muted") about |
            a(href="/privacy", class="text-muted")  privacy |
            a(href="/contact", class="text-muted")  contact

          p
            //- using inline html here because it makes it easy to understand
            | made with <i class="fa fa-heart"></i> in pr


